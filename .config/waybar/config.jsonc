{
    "layer": "bottom",
    "spacing": 0,
    "position":"bottom",
    "height": 0,
    "margin-top": 8,
    "margin-right": 0,
    "margin-bottom": 0,
    "margin-left": 0,

    "modules-left": ["custom/archlogo","group/expand"],
    "modules-right": ["custom/media", "tray", "pulseaudio","network", "bluetooth", "clock"],
    "modules-center": ["hyprland/workspaces"],


 "custom/archlogo": {
    "format": "ÔåÉ ",
    "on-click": "wofi --show drun",
    "on-click-right": "exec .config/hypr/scripts/powermenu.sh ",
    "tooltip": true,
    "tooltip-format": "meowww ÂçÅ",
    },
    "pulseaudio": {
        "scroll-step": 5,
        "max-volume": 150,
        "format": "ÔÄß",
        "format-muted": "Ôö©",
        "format-bluetooth": "ÔÄß{icon}",
        "format-bluetooth-muted": "Ôö©{icon}",
        "nospacing": 1,
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip": true
    },   
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "Û∞Ç≤",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "Û∞Ç±‚Äâ{num_connections}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "exec .config/hypr/scripts/wofi-bluetooth"
    },      
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet":"Óºâ ",
        "format-disconnected": "Ó¨Å",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)Ôá´",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "exec .config/hypr/scripts/wifimenu "
    },    
    "hyprland/language": {
        "format": "{}",
        "format-en": "en",
        "format-ru": "ru",
    },    
    "custom/media": {
        "format": "{icon} {0}",
            "return-type": "json",
            "format-icons": {
                "Playing": "ÔÖÑ ",
                "Paused": "Ôäã "
            },
            "max-length": 50,
            "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
            "on-click": "playerctl play-pause",
            "on-scroll-up": "playerctl next",
            "on-scroll-down": "playerctl previous",
            "tooltip": false
        },    
        "group/expand": {
            "orientation": "horizontal",
              "drawer": {
                "transition-duration": 1000,
                "transition-to-left": true,
                "click-to-reveal": true
              },
              "modules": [ "custom/separator","cpu","memory"],
        },
        "custom/separator": {
            "format": "    ",
            "tooltip": false
        },       
        "cpu": {
            "format": "Ôãõ  {usage}%",
            "interval": 2
        },            
        "memory": {
            "format": "ÔÉâ  {percentage}%",
            "interval": 2
        },
    
    
}