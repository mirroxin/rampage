        "format-connected": "Û∞Ç±‚Äâ{num_connections}",
		"tooltip-format-connected": "Ôäî {device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}",
        "on-click": "exec .config/hypr/scripts/wofi-bluetooth"
    },      
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet":"Óºâ ",
        "format-disconnected": "Ó¨Å",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({bandwidthDownBytes})</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>Ôá´",
        "tooltip-format-ethernet": "{ifname} üñß ",
